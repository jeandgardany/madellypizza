<%- model_class = Product -%>
<div class="page-header">
  <h2><%= "Produto: " %><%= @product.name %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= "Código" %>:</strong></dt>
  <dd><%= @product.code %></dd>
  <dt><strong><%= "Descrição" %>:</strong></dt>
  <dd><%= @product.description %></dd>
  <dt><strong><%= "Preço" %>:</strong></dt>
  <dd><%= format_valor(@product.price) %></dd>
  <% if @product.pricePRO? %>
  <dt><strong><%= "Preço Promoção" %>:</strong></dt>
  <% else %>
  <% end %>

  <% if @product.pricePRO? %>
  <dd><%= format_valor(@product.pricePRO) %> **Enquanto durar o estoque**</dd>
  <dt><strong><%= "Categoria" %>:</strong></dt>
  <dd><%= @product.category.name %></dd>
  <dt><strong><%= "Foto" %>:</strong></dt>
  <p><dd><%= image_tag (@product.image.small_thumb.url) %>
  <% @product.photos.each do |photo| %>
      <%= image_tag photo.small_thumb.url %>
      <!--%= link_to "Deletar", product_photo_upload_path(@product, file), method: :delete, data: { confirm: "Tem certeza?" }, :class => 'btn btn-danger btn-sm' %-->
  <% end %>
 </dd></p>
  <dd><%= link_to "Home", root_path, :class => 'btn btn-dark btn-sm' %>
  <%= link_to 'Voltar', products_path, :class => 'btn btn-dark btn-sm' %></dd>
</dl>
<br>

  <% else %>
  <dt><strong><%= "Categoria" %>:</strong></dt>
  <dd><%= @product.category.name %></dd>
  <dt><strong><%= "Foto" %>:</strong></dt>
  <p><dd><%= image_tag (@product.image.small_thumb.url) %>
   <% @product.photos.each do |photo| %>
      <%= image_tag photo.small_thumb.url %>
   <% end %>
  </dd></p>
  <dd><%= link_to "Home", root_path, :class => 'btn btn-dark btn-sm' %>
  <%= link_to 'Voltar', products_path, :class => 'btn btn-dark btn-sm' %></dd>
</dl>
<br>
  <% end %>


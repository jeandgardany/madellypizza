      <% @products.where(promotion: true, status: "ativo").each do |product| %>
            <div class="col-md-2 col-sm-2 col-xs-4">
            <p class="text-center" style="font-size: small"><b><%= product.name %>
            <p><%= link_to image_tag(product.image.small_thumb.url, class: "img-responsive img-thumbnail"), product %></p>
            <p class="text-center"><b><%= format_valor(product.pricePRO) %></b></p>
            </div>       
      <% end %>
   </div>
</div>
